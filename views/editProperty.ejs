        <input type="file" name="floorImg10" id="floorImg10" accept="image/*">
      </div>

      <div class="form-group">
        <label for="logoText1">Logo Text 1:</label>
        <input type="text" name="logoText1" id="logoText1" value="<%= property.logoText1 %>">
      </div>

      <div class="form-group">
        <label for="logoText2">Logo Text 2:</label>
        <input type="text" name="logoText2" id="logoText2" value="<%= property.logoText2 %>">
      </div>

      <div class="form-group">
        <label for="logoText3">Logo Text 3:</label>
        <input type="text" name="logoText3" id="logoText3" value="<%= property.logoText3 %>">
      </div>

      <div class="form-group">
        <label for="logoText4">Logo Text 4:</label>
        <input type="text" name="logoText4" id="logoText4" value="<%= property.logoText4 %>">
      </div>

      <div class="form-group">
        <label for="logoText5">Logo Text 5:</label>
        <input type="text" name="logoText5" id="logoText5" value="<%= property.logoText5 %>">
      </div>

      <div class="form-group">
        <label for="logoText6">Logo Text 6:</label>
        <input type="text" name="logoText6" id="logoText6" value="<%= property.logoText6 %>">
      </div>

      <div class="form-group">
        <label for="logoText7">Logo Text 7:</label>
        <input type="text" name="logoText7" id="logoText7" value="<%= property.logoText7 %>">
      </div>

      <div class="form-group">
        <label for="logoText8">Logo Text 8:</label>
        <input type="text" name="logoText8" id="logoText8" value="<%= property.logoText8 %>">
