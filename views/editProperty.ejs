<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Property</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
      color: #555;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    select,
    textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    textarea {
      resize: vertical;
    }

    button {
      display: block;
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 4px;
      background-color: #28a745;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
      margin-top: 20px;
    }

    button:hover {
      background-color: #218838;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 20px;
      color: #007bff;
      text-decoration: none;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Edit Property</h1>
    <form action="/admin/update/property/<%= property._id %>" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <label for="categories">Categories:</label>
        <select name="categories" id="categories" multiple>
          <% ['Trending', 'Ultra luxury' , 'Luxury Project' , 'Premium Project' , 'Affordable Project'
            ].forEach(category=> { %>
            <option value="<%= category %>" <%=property.categories.includes(category) ? 'selected' : '' %>><%= category
                %>
            </option>
            <% }) %>
        </select>
      </div>



      <div class="form-group">
        <label for="icon">First Icon:</label>
        <select id="icon" name="icon">
          <option value="" disabled>Select an option</option>
          <% ['Affordable.png', 'luxury.png' , 'Approved.png' , 'Premium.png' , 'Trending.png' , 'Ultraluxury.png','NewTrending.png'
            ].forEach(icon=> { %>
            <option value="<%= icon %>" <%=property.icon.includes(icon) ? 'selected' : '' %>><%= icon.split('.')[0] %>
            </option>
            <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="rera">RERA Icon:</label>
        <select id="rera" name="rera">
          <option value="" >None</option>
          <option value="RERAA.jpg" <%=property.rera.includes('RERAA.png') ? 'selected' : '' %>>RERA</option>
        </select>
      </div>

      <div class="form-group">
        <label for="imageUrl">Image URL:</label>
        <input type="file" id="imageUrl" name="imageUrl" accept="image/*">
      </div>

      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= property.name %>">
      </div>

      <div class="form-group">
        <label for="reraCode">RERA Code:</label>
        <input type="text" name="reraCode" id="reraCode" value="<%= property.reraCode %>">
      </div>
<!-- 

      <div class="form-group">
        <label for="by">By:</label>
        <select id="developerId" name="developerId" required>
          <% developers.forEach(developer=> { %>
            <option value="<%= developer._id %>" <%=property.by==developer._id ? 'selected' : '' %> >
              <%= developer.name %>
            </option>
            <% }) %>
        </select>
      </div> -->

      <div class="form-group">
        <label for="location">Location:</label>
        <input type="text" name="location" id="location" value="<%= property.location %>">
      </div>

      <div class="form-group">
        <label for="price">Price:</label>
        <input type="text" name="price" id="price" value="<%= property.price %>">
      </div>

      <div class="form-group">
        <label for="status">Status:</label>
        <input type="text" name="status" id="status" value="<%= property.status %>">
      </div>

      <div class="form-group">
        <label for="configuration">Configuration:</label>
        <input type="text" name="configuration" id="configuration" value="<%= property.configuration %>">
      </div>

      <div class="form-group">
        <label for="possession">Possession Date:</label>
        <input type="text" name="possession" id="possession" value="<%= property.possession %>">
      </div>

      <div class="form-group">
        <label for="units">Units:</label>
        <input type="number" name="units" id="units" value="<%= property.units %>">
      </div>

      <div class="form-group">
        <label for="land">Land:</label>
        <input type="text" name="land" id="land" value="<%= property.land %>">
      </div>

      <div class="form-group">
        <label for="residence">Residence:</label>
        <input type="text" name="residence" id="residence" value="<%= property.residence %>">
      </div>

      <div class="form-group">
