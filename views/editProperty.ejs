        <input type="text" name="logoText10" id="logoText10" value="<%= property.logoText10 %>">
      </div>


      <button type="submit">Update Property</button>
    </form>

    <a href="/admin" class="back-link">Back to Dashboard</a>
  </div>


</body>

</html>