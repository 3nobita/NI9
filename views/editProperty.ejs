        <input type="text" id="point5" name="point5" value="<%= property.point5 %>">
      </div>

      <div class="form-group">
        <label for="about">About:</label>
        <textarea id="about" name="about" rows="4"><%= property.about %></textarea>
      </div>


      <div class="form-group">
        <label for="unitytype">Unity Type:</label>
        <input type="text" name="unitytype" id="unitytype " value="<%= property.unitytype %>">
      </div>
      <div class="form-group">
        <label for="size">Size:</label>
        <input type="text" name="size" id="size" value="<%= property.size %>">
      </div>
      <div class="form-group">
        <label for="range">Range:</label>
        <input type="text" name="range" id="range" value="<%= property.range %>">
      </div>
      <div class="form-group">
        <label for="booking">Booking:</label>
        <input type="text" name="booking" id="booking" value="<%= property.booking %>">
      </div>
      <div class="form-group">
        <label for="token">Token:</label>
        <input type="text" name="token" id="token" value="<%= property.token %>">
      </div>

      <div class="form-group">
        <label for="plans">Plans:</label>
        <input type="text" name="plans" id="plans" value="<%= property.plans %>">
      </div>

      <div class="form-group">
